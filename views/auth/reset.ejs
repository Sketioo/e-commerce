<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
   <% if(errorMessage) { %>
    <div class="alert user-message user-message--error alert-danger col-4 p-2 my-2" role="alert"><%= errorMessage %></div>
    <% } %>
    <main>
        <form class="login-form" action="/reset" method="POST">
            <div class="form-control">
                <label for="email">E-mail</label>
                <input type="text" name="email" id="email">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-outline-success btn-sm" type="submit">Reset Password</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>